{
  "name": "scaledtest",
  "version": "1.0.0",
  "description": "A Next.js application with Keycloak authentication",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "node scripts/setup-keycloak.js && next start",
    "start:all": "docker-compose -f docker/docker-compose.yml up -d && node scripts/setup-keycloak.js && next start",
    "setup:keycloak": "node scripts/setup-keycloak.js",
    "setup:keycloak:cli": "node scripts/setup-keycloak-cli.js",
    "update-deps": "npx npm-check-updates -u && npm install",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "fix:lineendings": "git add --renormalize .",
    "fix:lineendings:powershell": "pwsh -File ./scripts/fix-line-endings.ps1",
    "test": "jest",
    "test:ci": "jest --forceExit --detectOpenHandles",
    "test:unit": "jest --selectProjects Unit",
    "test:integration": "jest --selectProjects Integration",
    "test:system": "jest --selectProjects System",
    "test:all": "jest",
    "test:ui": "playwright test",
    "test:ui:setup": "node scripts/setup-keycloak.js && playwright test",
    "test:ui:full": "docker-compose -f docker/docker-compose.yml up -d && npm run test:ui:setup",
    "prepare": "husky",
    "postinstall": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@opensearch-project/opensearch": "^3.5.1",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "keycloak-js": "^26.2.0",
    "next": "^15.3.2",
    "nodemon": "^3.1.10",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-node": "^10.9.2",
    "zod": "^3.25.27"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/jest": "^29.5.14",
    "@types/next": "^9.0.0",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/wait-on": "^5.3.4",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "eslint-config-next": "^15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "expect-playwright": "^0.8.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-playwright-preset": "^4.0.0",
    "lint-staged": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "wait-on": "^8.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md,yml,yaml,html}": [
      "prettier --write"
    ]
  }
}
