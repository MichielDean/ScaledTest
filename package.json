{
  "name": "scaledtest",
  "version": "1.0.0",
  "description": "A Next.js application with Keycloak authentication",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "npm run format && npm run build:jest-reporter && tsc && next build",
    "build:jest-reporter": "tsc -p tsconfig.jest-reporter.json && if exist dist\\jest\\logging\\enhancedCtrfReporter.js (move dist\\jest\\logging\\enhancedCtrfReporter.js dist\\jest\\enhancedCtrfReporter.cjs)",
    "dev": "docker compose -f docker/docker-compose.yml up -d && npx tsx scripts/setup-keycloak.ts && next dev --turbopack",
    "setup:keycloak": "npx tsx scripts/setup-keycloak.ts",
    "update-deps": "npx npm-check-updates -u && npm install",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,yml,yaml,html}\" --log-level warn",
    "test": "jest --forceExit --detectOpenHandles",
    "send-test-results": "npx tsx scripts/send-test-results.ts",
    "demo-data": "npx tsx scripts/generate-demo-data.ts",
    "generate-ctrf:types": "npx json2ts -i src/schemas/ctrf/ctrf-schema.json -o src/schemas/ctrf/ctrf.ts --inferStringEnumKeysFromValues --enableConstEnums",
    "prepare": "husky",
    "postinstall": "husky && npx playwright install chromium"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@nivo/bar": "^0.99.0",
    "@nivo/core": "^0.99.0",
    "@nivo/line": "^0.99.0",
    "@nivo/pie": "^0.99.0",
    "@nivo/scatterplot": "^0.99.0",
    "@opensearch-project/opensearch": "^3.5.1",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "framer-motion": "^12.19.1",
    "jose": "^6.0.11",
    "keycloak-js": "^26.2.0",
    "lucide-react": "^0.523.0",
    "next": "^15.3.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "recharts": "^2.15.3",
    "zod": "^3.25.45"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/wait-on": "^5.3.4",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "axe-playwright": "^2.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-ctrf-json-reporter": "^0.0.9",
    "jest-environment-jsdom": "^30.0.0",
    "jest-environment-node": "^29.7.0",
    "json-schema-to-typescript": "^15.0.4",
    "lint-staged": "^16.1.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "wait-on": "^8.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md,yml,yaml,html}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "glob": "10.4.5",
    "nyc": {
      "glob": "^7.2.3"
    }
  }
}
