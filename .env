# Better Auth Configuration
BETTER_AUTH_SECRET=complex-secret-at-least-32-characters-long-for-production-use
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Email Verification Configuration
# Set to 'false' in development/test environments to skip email verification
REQUIRE_EMAIL_VERIFICATION=false

# Authentication Database Configuration (auth database in same PostgreSQL instance)
DATABASE_URL=postgresql://scaledtest:password@127.0.0.1:5432/auth

# Main Database Configuration (TimescaleDB for test results)
TIMESCALE_DATABASE_URL=postgresql://scaledtest:password@127.0.0.1:5432/scaledtest

# TimescaleDB Configuration
TIMESCALEDB_HOST=127.0.0.1
TIMESCALEDB_PORT=5432
TIMESCALEDB_DATABASE=scaledtest
TIMESCALEDB_USERNAME=scaledtest
TIMESCALEDB_PASSWORD=password

# CTRF Test Results API Configuration - OPTIONAL
# API base URL for sending test results (defaults to http://localhost:3000)
API_BASE_URL=http://127.0.0.1:3000
NEXT_PUBLIC_API_URL=http://127.0.0.1:3000

# Test user credentials for API authentication - OPTIONAL
# Used by the send-test-results script to authenticate with the API
TEST_API_USERNAME=maintainer@example.com
TEST_API_PASSWORD=Maintainer123!

# CTRF Report Configuration - OPTIONAL
# Set to 'true' to automatically clean up the CTRF report file after sending
CLEANUP_CTRF_REPORT=false

# Parallel Data Ingestion Configuration - OPTIONAL
# Set to 'true' to enable dual writes to both OpenSearch and TimescaleDB
ENABLE_TIMESCALEDB_WRITES=true
